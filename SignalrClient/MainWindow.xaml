<Window x:Class="SignalrClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalrClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="connectButton" Content="Connect"  VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Width="95" Click="connectButton_Click" Height="41" />
        <ListBox x:Name="messagesList" HorizontalAlignment="Center" Height="400" Margin="0,0,0,0" Grid.Column="0" VerticalAlignment="Center" Width="550"  BorderThickness="1"  BorderBrush="Gainsboro"/>
    </Grid>
</Window>
